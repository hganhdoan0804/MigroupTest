@model TDanhMucSp
<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
    <div class="featured__Model">
        <div class="featured__Model__pic set-bg" data-setbg="@Url.Content("~/ProductImages/" + Model.AnhDaiDien)"
             style="background-image: url(&quot;img/featured/feature-1.jpg&quot;);">
            <ul class="featured__Model__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__Model__text">
            <h6><a asp-controller="Home" asp-action="Details" asp-route-productCode="@Model.MaSp">@Model.TenSp</a></h6>
            <h5>@Model.GiaLonNhat</h5>
        </div>
    </div>
</div>
