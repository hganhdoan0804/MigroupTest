@model IEnumerable<TLoaiSp>

<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>Các loại sản phẩm<span>
        </div>
        <ul>
            @foreach(var item in Model)
            {
                <li>
                    <a asp-controller="Home" asp-action="ProductsByType" asp-route-productType="@item.MaLoai">@item.Loai</a>
                </li>
            }
        </ul>
    </div>
</div>